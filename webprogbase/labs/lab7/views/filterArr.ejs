<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Results</title>
    <meta name="description" content="results">
    <link type="text/css"  href="../public/stylesheets/style.css"  rel="stylesheet"/>
</head>
<body>
 <% include partials/header %>  
 <div class="header">
        <h1>Results</h1>
  </div>
  <%if (length == 0) { %>
        <div class="transitions">
            <a class="mainlink" href="/">Home</a>
        </div>
        <h1 style="  font-family: 'Open Sans', sans-serif;color: #5C2610; display: block; position: relative; 
        width: 10em; margin: 2em auto; text-align: center;">There are no results</h1>
  <% } else { %>
       <div class="transitions">
            <a class="mainlink" href="/">Home</a>
        </div>
        <div class="listOfAnimals">
            <ul class="list">
                <% for (let i of animals) { %>
                     <li><img class="animal" src="data:image/<%=i.picture_type%>;base64,<%=i.picture%>" alt="picture"><h4><%=i.description%></h4>
                     <a class="moreLink" href="animals/<%= i.id %>">more</a>
                     </img></li>
                <%}%>
            </ul>
         </div>
         <% if (pageCount > 1) { %>
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li><a class="pag" href="<%=link%>page=<%=+currentPage - 1 %>">&larr;</a></li>
                    <li ><a class="pag" href="<%=link%>page=1">&laquo;</a></li>
                <% } %>
                <% let i = 1;
                if (currentPage > 5) {
                    i = +currentPage - 4;
                } %>
                <% if (i !== 1) { %>
                    <li class="disabled"><a href="#">...</a></li>
                <% } %>
                <% for (i; i<=pageCount; i++) { %>
                    <% if (currentPage == i) { %>
                        <li class="current" ><span><%= i %></span></li>
                    <% } else { %>
                        <li><a class="pag" href="<%=link%>page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == (+currentPage + 4)) { %>
                        <li class="disabled"><a href="#">...</a></li>
                    <% break; } %>
                <% } %>
                <% if (currentPage != pageCount) { %>
                    <li><a class="pag"  href="<%=link%>page=<%= pageCount %>">&raquo;</a></li>
                    <li><a class="pag" href="<%=link%>page=<%= +currentPage + 1 %>">&rarr;</a></li>
                <% } %>
            </ul>
        <% } %>
    <% } %>
  </body>
</html>